<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    mc:Ignorable="d">

    <Style TargetType="{x:Type Main}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Main}">
                    <Grid x:Name="PART_MainHost"
                          d:DesignWidth="{StaticResource DesignWidth}"
                          d:DesignHeight="{StaticResource DesignHeight}"
                          d:DataContext="{x:Static DesignMainViewModel.DesignIntance}"
                          Background="#FF000000" UseLayoutRounding="True" >

                        <Border x:Name="MainBackgroundBorder" Background="#A0000000" Panel.ZIndex="-45">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="{StaticResource DesignHeight}"/>
                                    <Setter Property="Width" Value="{StaticResource DesignWidth}"/>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Setter Property="Opacity" Value="0"/>
                                    <Style.Triggers>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=MainBackgroundImageButton, Path=IsChecked}" Value="False"/>
                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible" />
                                        </MultiDataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=MainBackgroundImageButton, Path=IsChecked}" Value="False"/>
                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0" Duration="0:0:1" From="0" To="0.5"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0" Duration="0:0:0.3" From="0.5" To="0.5"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.3" Duration="0:0:0.6" From="0.5" To="0"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>
                                        </MultiDataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                        </Border>


                        <Border x:Name="MainScreenBorder" Background="{DynamicResource MainScreenBorderOverlay}" Panel.ZIndex="-45">

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Height" Value="{StaticResource DesignHeight}"/>
                                    <Setter Property="Width" Value="{StaticResource DesignWidth}"/>
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=MainBackgroundBorder, Path=Visibility}" Value="Visible">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                        </Border>


                        <Grid x:Name="MainGrid" Panel.ZIndex="-46" Width="{StaticResource DesignWidth}"
			      VerticalAlignment="Center" >

                            <Grid.Style>
                                <Style>
                                    <Setter Property="ItemsControl.Opacity" Value="0"/>
                                    <Setter Property="ItemsControl.Visibility" Value="Collapsed"/>
                                    <Setter Property="ItemsControl.Margin" Value="0,0,0,0"/>
                                    <Setter Property="ItemsControl.Height" Value="{StaticResource DesignHeight}"/>
                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True">
                                            <Setter Property="ItemsControl.Opacity" Value="1" />
                                            <Setter Property="ItemsControl.Visibility" Value="Visible" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False">
                                            <Setter Property="ItemsControl.Opacity" Value="0.9" />
                                            <Setter Property="ItemsControl.Visibility" Value="Visible" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding Items.Count, ElementName=PART_ListGameItems}" Value="0">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <Border Background="{DynamicResource ButtonBackgroundBrush}">
                                <Grid Visibility="Visible">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="6*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="6*"/>
                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Grid.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="8" ScaleY="8"/>
                                                <SkewTransform/>
                                                <RotateTransform />
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </Grid.RenderTransform>
                                        <Border Margin="0,77.75,0,0" Background="{DynamicResource ButtonBackgroundBrush}" Tag="False" Visibility="Visible">

                                            <!--<FadeImage x:Name="Fade" Visibility="Visible" Grid.Row="1" Grid.Column="1" Source="{Binding SelectedGame.DisplayBackgroundImageObject}" 
						Stretch="UniformToFill" IsBlurEnabled="true" BlurAmount="{Binding ElementName=SizeGridBlur, Path=ActualHeight}"
						HorizontalAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0.5,0.5" 
						RenderOptions.BitmapScalingMode="Fant" >

                                            <FadeImage.Style>
                                                <Style TargetType="FadeImage">
                                                <Setter Property="Opacity" Value="1"/>
                                                <Style.Triggers>


                                                    </Style.Triggers>
                                                </Style>
                                            </FadeImage.Style>

                    			<FadeImage.CacheMode>
                        			<BitmapCache  EnableClearType="False"
                              			RenderAtScale="1"
                              			SnapsToDevicePixels="False" />
                    			</FadeImage.CacheMode>

                                        <FadeImage.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                <SkewTransform/>
                                                <RotateTransform />
                                                <TranslateTransform/>
                                            </TransformGroup>
                                        </FadeImage.RenderTransform>
                                    </FadeImage>-->

                                        </Border>
                                    </Grid>

                                    <Grid x:Name="SizeGrid" Grid.Row="1" Grid.Column="1" Visibility="Hidden" >

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="25*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="25*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid x:Name="SizeGridSecond" Grid.Row="1" Grid.Column="1"/>
                                        <StackPanel x:Name="SizeGridBlur" Grid.Row="1" Grid.Column="1" MinHeight="0">
                                            <Grid Height="1"/>
                                            <Grid Height="{Binding ElementName=SizeGridSecond, Path=ActualHeight}"/>
                                            <Grid Height="{Binding ElementName=SizeGridSecond, Path=ActualWidth}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>


                        <Grid x:Name="BackgroundGrid" Grid.RowSpan="3" VerticalAlignment="Top" HorizontalAlignment="Center"
			      FocusVisualStyle="{x:Null}" Panel.ZIndex="-46" >

                            <Grid.Style>
                                <Style>
                                    <Setter Property="ItemsControl.Height" Value="620"/>
                                    <Setter Property="ItemsControl.Opacity" Value="1"/>
                                    <Setter Property="ItemsControl.Margin" Value="0,0,0,0"/>
                                    <Setter Property="ItemsControl.Background" Value="#00000000"/>
                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding ElementName=MainBackgroundImageButton, Path=IsChecked}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:1" From="0" To="1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="0" To="0"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="0" To="1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>


                                        <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="false">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=ExtraMetadataLoader_VideoLoaderControl_NoControls_Sound, Path=Visibility}" Value="Visible">
                                            <Setter Property="ItemsControl.Background" Value="#A0000000" />
                                        </DataTrigger>


                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding Items.Count, ElementName=PART_ListGameItems}" Value="0">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>


                                        <DataTrigger Binding="{Binding ElementName=MainBackgroundImageButton, Path=IsChecked}" Value="False">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>

                            <FadeImage x:Name="PART_ImageBackground" Source="{Binding SelectedGame.DisplayBackgroundImageObject}"
                             RenderOptions.BitmapScalingMode="Fant" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center"
						 VerticalAlignment="Center" Stretch="UniformToFill" >

                                <FadeImage.Style>
                                    <Style>
                                        <Setter Property="ItemsControl.Opacity" Value="1"/>
                                        <Setter Property="ItemsControl.Width" Value="{StaticResource DesignWidth}"/>
                                        <Style.Triggers>

                                            <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.5" From="0" To="1"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>


                                            <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="false">
                                                <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                            </DataTrigger>


                                        </Style.Triggers>
                                    </Style>
                                </FadeImage.Style>

                                <FadeImage.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform x:Name="ScaleTransformBackgroundImage" ScaleX="1" ScaleY="1" />
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </FadeImage.RenderTransform>

                            </FadeImage>

                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="80,0,0,0">
                                <Border x:Name="ExtraMetadataLoader_LogoLoaderControlGrid"
												VerticalAlignment="Stretch"
												HorizontalAlignment="Left"
												MinHeight="{PluginSettings Plugin=ExtraMetadataLoader, Path=LogoMaxHeight, FallbackValue=0}"
												Tag="{DynamicResource DetailsViewAllowUseOfLogos}">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="false">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}, FallbackValue=False}" Value="false" >
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <ContentControl x:Name="ExtraMetadataLoader_LogoLoaderControl" />
                                </Border>

                                <TextBlock x:Name="GameTitle" Text="{Binding SelectedGame.DisplayName, NotifyOnTargetUpdated=True}" FontFamily="Lato"
									Foreground="White" FontSize="46" VerticalAlignment="Center" TextWrapping="Wrap" MaxHeight="150"
									TextTrimming="CharacterEllipsis" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style>
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable, FallbackValue=False}" Value="false">
                                                    <Setter Property="ItemsControl.Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                    </TextBlock.Effect>
                                    <TextBlock.Triggers>
                                        <EventTrigger RoutedEvent="Binding.TargetUpdated">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" To="0" />
                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.7" From="0" To="1" BeginTime="0:0:0" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </TextBlock.Triggers>
                                </TextBlock>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                                    <StackPanel x:Name="PlatformSourceInfo" Width="Auto" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Image 	x:Name="ButtonSourceImage" Source="{ThemeFileBinding SelectedGame.Source.Name, PathFormat='Icons/Source/{0}.png'}" Height="50" 
												Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant">
                                            <Image.Effect>
                                                <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                            </Image.Effect>
                                        </Image>
                                        <Image 	x:Name="ButtonPlatformImage" Source="{ThemeFileBinding SelectedGame.Platforms[0].Name, PathFormat='Icons/Source/{0}.png'}" Height="50" 
												Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="Fant">
                                            <Image.Effect>
                                                <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                            </Image.Effect>
                                        </Image>
                                        <TextBlock  Background="Transparent" Style="{DynamicResource TextBlockBaseStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" 
												   Text="&#xF127;" FontFamily="Segoe MDL2 Assets" FontSize="3" Margin="15,-3">
                                            <TextBlock.Effect>
                                                <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                            </TextBlock.Effect>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel x:Name="YearInfo" Width="Auto" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border x:Name="YearButton" Margin="0,0,7,0" BorderBrush="White" CornerRadius="8" BorderThickness="2" Height="40">
                                            <TextBlock x:Name="ReleaseYear" Background="Transparent" Style="{DynamicResource TextBlockBaseStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" 
													           Text="{Binding SelectedGame.ReleaseYear}" FontFamily="{DynamicResource FontFamily}" FontSize="20" Margin="8,0">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel x:Name="TimePlayedInfo" Width="Auto" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border x:Name="TimePlayedButton" Margin="0,0,7,0" BorderBrush="White" CornerRadius="8" BorderThickness="2" Height="40">
                                            <TextBlock x:Name="TimePlayed" Background="Transparent" Style="{DynamicResource TextBlockBaseStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" 
													           Text="{Binding SelectedGame.Playtime, Converter={StaticResource PlayTimeToStringConverter}}" 
                                                               FontFamily="{DynamicResource FontFamily}" FontSize="20" Margin="8,0">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel x:Name="LastPlayedInfo" Width="Auto" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border x:Name="LastPlayedButton" Margin="0,0,7,0" BorderBrush="White" CornerRadius="8" BorderThickness="2" Height="40">
                                            <TextBlock x:Name="LastPlayed" Background="Transparent" Style="{DynamicResource TextBlockBaseStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" 
													           Text="{Binding SelectedGame.LastActivity, Converter={StaticResource DateTimeToLastPlayedConverter}}"
                                                               FontFamily="{DynamicResource FontFamily}" FontSize="20" Margin="8,0">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>
                                    
                                    <StackPanel x:Name="PlayStatusInfo" Width="Auto" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border x:Name="PlayStatusButton" Margin="0" BorderBrush="White" CornerRadius="8" BorderThickness="2" Height="40">
                                            <TextBlock x:Name="PlayStatus" Background="Transparent" Style="{DynamicResource TextBlockBaseStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" 
													           Text="{Binding SelectedGame.CompletionStatus}" FontFamily="{DynamicResource FontFamily}" FontSize="20" Margin="8,0">
                                                <TextBlock.Effect>
                                                    <DropShadowEffect ShadowDepth="2" RenderingBias="Quality" Color="{DynamicResource BlackColor}" />
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </Border>
                                    </StackPanel>

                                </StackPanel>
                            </StackPanel>

                            <Border x:Name="BackgroundBorder" Background="{DynamicResource MainScreenOverlay}"
					Width="{StaticResource DesignWidth}" Height="{Binding ActualHeight, ElementName=BackgroundGrid}" HorizontalAlignment="Left" VerticalAlignment="Top">

                                <Border.Style>
                                    <Style>
                                        <Setter Property="ItemsControl.Opacity" Value="1"/>
                                        <Setter Property="ItemsControl.Visibility" Value="Visible"/>

                                    </Style>
                                </Border.Style>

                            </Border>


                        </Grid>


                        <Border x:Name="AltBackgroundBorder" Background="{DynamicResource MainScreenOverlay}" Panel.ZIndex="-46"
					Width="{StaticResource DesignWidth}" Height="{Binding ActualHeight, ElementName=BackgroundGrid}" 
					HorizontalAlignment="Left" VerticalAlignment="Top">

                            <Border.Style>
                                <Style>
                                    <Setter Property="ItemsControl.Opacity" Value="0"/>
                                    <Setter Property="ItemsControl.Visibility" Value="Collapsed"/>
                                    <Style.Triggers>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=GameTitle, Path=Opacity}" Value="1"/>
                                                <Condition Binding="{Binding ElementName=GameTitle, Path=Margin}" Value="0,0,0,0"/>
                                                <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=NewContextVideoAvailable}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <MultiDataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:3" Duration="0:0:0.5" From="0" To="0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.EnterActions>
                                            <MultiDataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="0.2" To="0"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </MultiDataTrigger.ExitActions>
                                        </MultiDataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=GameTitle, Path=Opacity}" Value="1"/>
                                                <Condition Binding="{Binding ElementName=GameTitle, Path=Margin}" Value="0,0,0,0"/>
                                                <Condition Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=NewContextVideoAvailable}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="ItemsControl.Visibility" Value="Visible" />
                                        </MultiDataTrigger>

                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding ElementName=MainBackgroundImageButton, Path=IsChecked}" Value="False"/>
                                                <Condition Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="True"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </MultiDataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="false">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Border.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0.7" MappingMode="RelativeToBoundingBox" EndPoint="0,1">
                                    <GradientStop Color="#00000000" Offset="1"/>
                                    <GradientStop Color="#FF000000" Offset="0"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>

                        </Border>


                        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Panel.ZIndex="-45">

                            <StackPanel.Style>
                                <Style>
                                    <Setter Property="ItemsControl.Opacity" Value="0"/>
                                    <Setter Property="ItemsControl.Visibility" Value="Visible"/>
                                    <Setter Property="ItemsControl.Margin" Value="70,300,0,0"/>
                                    <Style.Triggers>


                                        <DataTrigger Binding="{Binding ElementName=Id, Path=Opacity}" Value="1">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" BeginTime="0:0:0.5" Duration="0:0:0.7" From="0" To="1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                            <DataTrigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" From="1" To="0"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.ExitActions>
                                        </DataTrigger>


                                        <DataTrigger Binding="{PluginSettings Plugin=ExtraMetadataLoader, Path=IsLogoAvailable}" Value="False">
                                            <Setter Property="ItemsControl.Margin" Value="70,150,0,0" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="false">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding Items.Count, ElementName=PART_ListGameItems}" Value="0">
                                            <Setter Property="ItemsControl.Visibility" Value="Collapsed" />
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding ElementName=PART_ElemGameDetails, Path=Visibility}" Value="Visible">
                                            <Setter Property="ItemsControl.Visibility" Value="Hidden" />
                                        </DataTrigger>


                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <StackPanel HorizontalAlignment="Left" Margin="-2,0,0,0" Width="700" MaxHeight="300" Visibility="Visible">

                                <!--<StackPanel>

                                    <TextBlock x:Name="GameTitle" Text="{Binding SelectedGame.DisplayName, NotifyOnTargetUpdated=True}" FontFamily="{DynamicResource FontFamily}"
						Foreground="White" FontSize="36" VerticalAlignment="Center" TextWrapping="Wrap" MaxHeight="150"
						TextTrimming="CharacterEllipsis" FontWeight="SemiBold">

				<TextBlock.Triggers>
					<EventTrigger RoutedEvent="Binding.TargetUpdated">
				<BeginStoryboard>
					<Storyboard>
						<DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0" To="0" />
						<DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:0.7" From="0" To="1" BeginTime="0:0:0" />
					</Storyboard>
				</BeginStoryboard>
					</EventTrigger>
				</TextBlock.Triggers>


                            <TextBlock.Style>
                                <Style>
                                    <Setter Property="ItemsControl.Margin" Value="0,0,0,0"/>
                                    <Style.Triggers>


                                            <DataTrigger Binding="{Binding ElementName=ChangeViewButton, Path=IsChecked}" Value="False">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin" BeginTime="0:0:0" Duration="0:0:0" From="0,0,0,0" To="0,0,0,0.01"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
